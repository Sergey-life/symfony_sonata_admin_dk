{% extends 'base.html.twig' %}

{% block title %}Hello BasketController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ваш кошик</h1>
        {% if cart.items.count > 0 %}
            <div class="row mt-4">
                <!-- List of items -->
                <div class="col-md-8">
                    {{ form_start(form) }}
                    <div class="card">
                        <div class="card-header bg-dark text-white d-flex">
                            <h5>Продукти</h5>
                            <div class="ml-auto">
                                {% if cart.items.count > 0 %}
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-warning'}}) }}
                                    {{ form_widget(form.clear, {'attr': {'class': 'btn btn-light'}}) }}
                                    <a href="{{ path('app_delete_basket') }}" class="btn btn-danger">Видалити</a>
                                {% endif %}
                            </div>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for item in form.items %}
                                <li class="list-group-item d-flex">
                                    <div class="flex-fill mr-2">
                                        <img src="https://via.placeholder.com/200x150" width="64" alt="Product image">
                                    </div>
                                    <div class="flex-fill mr-2">
                                        <h5 class="mt-0 mb-0">{{ item.vars.data.product.name }}</h5>
                                        <small>{{ item.vars.data.product.description[:50] }}...</small>
                                        <div class="form-inline mt-2">
                                            <div class="form-group mb-0 mr-2">
                                                {{ form_widget(item.decr, {'attr': {'class': 'btn btn-danger btn-sm'}}) }}
                                                    {{ form_widget(item.quantity, {
                                                        'attr': {
                                                            'class': 'form-control form-control-sm js-quantity-' ~ item.vars.data.product.id ~ 'form-control-sm ' ~ (item.quantity.vars.valid ? '' : 'is-invalid')
                                                        }
                                                    }) }}
{#                                                {{ form_widget(item.incr, {'attr': {'class': 'btn btn-success btn-sm'}}) }}#}
                                                <input type="hidden" name="prodId" class="js-prod-id" value="{{ item.vars.data.product.id }}">
{#                                                <input type="hidden" name="quantity" value="{{ item.quantity}}">#}
                                                <a  href="#" class="btn btn-success btn-sm js-add-item" id="{{ item.vars.data.product.id }}"> + </a>
{#                                                <a href="{{ path('app_add_item', {id: item.vars.data.product.id}) }}" class="btn btn-success btn-sm"> + </a>#}
                                                <div class="invalid-feedback">
                                                    {{ form_errors(item.quantity) }}
                                                </div>
                                            </div>
                                            {{ form_widget(item.remove, {'attr': {'class': 'btn btn-dark btn-sm'}}) }}
                                        </div>
                                    </div>
                                    <div class="flex-fill mr-2 text-right">
                                        <b>{{ item.vars.data.product.price }} €</b>
                                    </div>
                                </li>
                            {% endfor %}
                            {% for error in app.flashes('error') %}
                                <div class="form-control form-control-sm is-invalid">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        </ul>
                    </div>
                    {{ form_end(form, {'render_rest': true}) }}
                </div>
                <!-- Summary -->
                <div class="col-md-4">
                    <div class="card mt-4 mt-md-0">
                        <h5 class="card-header bg-dark text-white">Сума замовлення</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <div><b>Всього до сплати</b></div>
                                <span><b>{{ cart.total }} €</b></span>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a href="{{ path('app_make_order') }}" class="btn btn-warning w-100">Оформити замовлення</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="alert alert-info">
                Ваш кошик порожній. Перейти до <a href="{{ path('all.products') }}">списку продуктів</a>.
            </div>
        {% endif %}
    </div>

    <script>
        $(function () {
            $('.js-add-item').click(function (e) {
                let prodId = e.target.id
                // let quantity = $('.js-quantity-'+prodId).val();
                let quantity = $(`input[class=js-quantity-${prodId}]`).val();
                let url = "{{ path('app_add_item', {'prodId': 'prodId', 'quantity': 'quantity' })}}";
                url = url.replace("prodId", parseInt(prodId)).replace("quantity", quantity === undefined ? -1 : quantity);
                $(this).attr('href', url);
            });
        });
    </script>

{% endblock %}